g"}]},"https://docs.nordicsemi.com/bundle/ncs-latest/page/nrf/samples/bluetooth/mesh/dfu/distributor/README.html#smp_over_bluetooth_authentication":{"titleInlineContent":[{"type":"text","text":"SMP over Bluetooth authentication"}],"url":"https:\/\/docs.nordicsemi.com\/bundle\/ncs-latest\/page\/nrf\/samples\/bluetooth\/mesh\/dfu\/distributor\/README.html#smp_over_bluetooth_authentication","type":"link","title":"SMP over Bluetooth authentication","identifier":"https:\/\/docs.nordicsemi.com\/bundle\/ncs-latest\/page\/nrf\/samples\/bluetooth\/mesh\/dfu\/distributor\/README.html#smp_over_bluetooth_authentication"},"doc://NordicMesh/documentation/NordicMesh/Usage":{"abstract":[{"type":"text","text":"How to start."}],"url":"\/documentation\/nordicmesh\/usage","kind":"article","title":"Usage","identifier":"doc:\/\/NordicMesh\/documentation\/NordicMesh\/Usage","type":"topic","role":"article"},"doc://NordicMesh/documentation/NordicMesh/FirmwareDistributionReceiversAdd":{"type":"topic","navigatorTitle":[{"text":"FirmwareDistributionReceiversAdd","kind":"identifier"}],"role":"symbol","kind":"symbol","title":"FirmwareDistributionReceiversAdd","fragments":[{"text":"struct","kind":"keyword"},{"text":" ","kind":"text"},{"text":"FirmwareDistributionReceiversAdd","kind":"identifier"}],"identifier":"doc:\/\/NordicMesh\/documentation\/NordicMesh\/FirmwareDistributionReceiversAdd","abstract":[{"text":"The Firmware Distribution Receivers Add message is an acknowledged message sent by","type":"text"},{"text":" ","type":"text"},{"text":"a Firmware Distribution Client to add new entries to the Distribution Receivers List state of","type":"text"},{"text":" ","type":"text"},{"text":"a Firmware Distribution Server.","type":"text"}],"url":"\/documentation\/nordicmesh\/firmwaredistributionreceiversadd"},"doc://NordicMesh/documentation/NordicMesh/FirmwareDistributionApply":{"type":"topic","navigatorTitle":[{"text":"FirmwareDistributionApply","kind":"identifier"}],"role":"symbol","kind":"symbol","title":"FirmwareDistributionApply","fragments":[{"text":"struct","kind":"keyword"},{"text":" ","kind":"text"},{"text":"FirmwareDistributionApply","kind":"identifier"}],"identifier":"doc:\/\/NordicMesh\/documentation\/NordicMesh\/FirmwareDistributionApply","abstract":[{"text":"The Firmware Distribution Apply message is an acknowledged message sent from","type":"text"},{"text":" ","type":"text"},{"text":"a Firmware Distribution Client to a Firmware Distribution Server to apply the firmware","type":"text"},{"text":" ","type":"text"},{"text":"image on the Target Nodes.","type":"text"}],"url":"\/documentation\/nordicmesh\/firmwaredistributionapply"},"doc://NordicMesh/documentation/NordicMesh/CreatingNetwork":{"abstract":[{"type":"text","text":"How to load or create a network."}],"url":"\/documentation\/nordicmesh\/creatingnetwork","kind":"article","title":"Creating and loading a network configuration","identifier":"doc:\/\/NordicMesh\/documentation\/NordicMesh\/CreatingNetwork","type":"topic","role":"article"},"doc://NordicMesh/documentation/NordicMesh/FirmwareUpdatePolicy/verifyOnly":{"fragments":[{"text":"case","kind":"keyword"},{"text":" ","kind":"text"},{"text":"verifyOnly","kind":"identifier"}],"title":"FirmwareUpdatePolicy.verifyOnly","type":"topic","role":"symbol","url":"\/documentation\/nordicmesh\/firmwareupdatepolicy\/verifyonly","kind":"symbol","identifier":"doc:\/\/NordicMesh\/documentation\/NordicMesh\/FirmwareUpdatePolicy\/verifyOnly","abstract":[{"type":"text","text":"The Firmware Distribution Server verifies that firmware image distribution completed"},{"type":"text","text":" "},{"type":"text","text":"successfully but does not apply the update. The Initiator (the Firmware Distribution Client)"},{"type":"text","text":" "},{"type":"text","text":"initiates firmware image application."}]},"doc://NordicMesh/documentation/NordicMesh/Configuration":{"abstract":[{"type":"text","text":"Configuration allows to customize the behavior of the local and remote nodes."}],"url":"\/documentation\/nordicmesh\/configuration","kind":"article","title":"Configuration","identifier":"doc:\/\/NordicMesh\/documentation\/NordicMesh\/Configuration","type":"topic","role":"article"},"doc://NordicMesh/documentation/NordicMesh/SendingMessages":{"title":"Sending messages","type":"topic","role":"article","url":"\/documentation\/nordicmesh\/sendingmessages","kind":"article","identifier":"doc:\/\/NordicMesh\/documentation\/NordicMesh\/SendingMessages","abstract":[{"type":"text","text":"How to send mesh messages using the manager."}]},"https://github.com/NordicSemiconductor/IOS-nRF-Mesh-Library/blob/main/Example/Source/View%20Controllers/Network/DFU/DFUViewController.swift":{"identifier":"https:\/\/github.com\/NordicSemiconductor\/IOS-nRF-Mesh-Library\/blob\/main\/Example\/Source\/View%20Controllers\/Network\/DFU\/DFUViewController.swift","url":"https:\/\/github.com\/NordicSemiconductor\/IOS-nRF-Mesh-Library\/blob\/main\/Example\/Source\/View%20Controllers\/Network\/DFU\/DFUViewController.swift","type":"link","title":"DFUViewController","titleInlineContent":[{"type":"codeVoice","code":"DFUViewController"}]}}}